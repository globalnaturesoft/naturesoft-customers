<% if customer.errors.any? %>
  <div class="alert alert-warning alert-bordered">
    <button type="button" class="close" data-dismiss="alert"><span>Ã—</span><span class="sr-only">Close</span></button>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this slide from being saved:</h2>
  
      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="panel panel-flat">
  
  <div class="panel-heading"></div>
  
  <div class="panel-body">

    <%= form_for([naturesoft_customers, :backend, customer], html: {class: "form-horizontal validate", multipart: true}) do |f| %>
    
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:first_name) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :first_name, class: "form-control required", placeholder: "First name..." %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:last_name) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :last_name, class: "form-control required", placeholder: "Last name..." %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:email) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :email, class: "form-control required" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:phone) %> <span class='text-danger'>*</span></label>
            <div class="col-md-12">
              <%= f.text_field :phone, class: "form-control required" %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label class="col-md-12 control-label" ><%= t(:address) %> </label>
            <div class="col-md-12">
              <%= f.text_field :address, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      
      <% if Naturesoft::Core.available?("areas") %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label class="col-md-12 control-label" ><%= t(:country) %> <span class='text-danger'>*</span></label>
              <div class="col-md-12">
                <div class="input-group">
                  <% selected = options_for_select([[customer.country.name, customer.country_id]], customer.country_id) if customer.country.present? %>
                  <%= select_tag("customer[country_id]",
                    selected,
                    {
                      class: "select2-ajax required",
                      include_blank: "none",
                      "data-url": naturesoft_areas.select2_backend_countries_path,
                      "data-child": "customer[area_id]:country_id"
                    }
                  ) %>
                  <span class="input-group-btn">
                    <a class="btn btn-info" href="<%= naturesoft_areas.new_backend_country_path %>"><i class="icon-plus2"></i></a>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label class="col-md-12 control-label" ><%= t(:area) %> <span class='text-danger'>*</span></label>
              <div class="col-md-12">
                <div class="input-group">
                  <% selected = options_for_select([[customer.area.name, customer.area_id]], customer.area_id) if customer.area.present? %>
                  <%= select_tag("customer[area_id]",
                    selected,
                    {
                      class: "select2-ajax required",
                      include_blank: "none",
                      "data-url": naturesoft_areas.select2_backend_areas_path,                      
                    }
                  ) %>
                  <span class="input-group-btn">
                    <a class="btn btn-info" href="<%= naturesoft_areas.new_backend_area_path %>"><i class="icon-plus2"></i></a>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    
      <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-check position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, naturesoft_customers.backend_customers_path, class: "btn btn-danger"%>
      </div>
        
    <% end %>
  </div>
</div>